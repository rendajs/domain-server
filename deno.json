{
	"compilerOptions": {
		"checkJs": true,
		"lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.window"]
	},
	"tasks": {
		"dev": "deno run --watch --allow-env --allow-read --allow-write --allow-net=0.0.0.0,api.github.com,api.cloudflare.com main.ts"
	},
	"fmt": {
		"files": {
			"exclude": ["www"]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 300,
			"proseWrap": "preserve"
		}
	},
	"lint": {
		"rules": {
			"exclude": ["no-inner-declarations"]
		}
	}
}
